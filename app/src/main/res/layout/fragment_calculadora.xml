<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?android:attr/windowBackground"
    tools:context=".opciones.CalculadoraFragment">

    <TextView
        android:id="@+id/lblTituloCalculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/stringTituloCalculadora"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblTituloPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/stringTituloPeso"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />
        <EditText
            android:id="@+id/edtPeso"
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:text="78.0"
            android:inputType="numberDecimal"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/lblTituloAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/stringTituloAltura"
            android:textSize="18sp"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/edtAltura"
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:text="1,70"
            android:inputType="numberDecimal"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblTIndiceMasaCorporal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/stringTIndiceMasaCorporal"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/lblIndiceMasaCorporal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="27.0"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:theme="@style/AppTheme"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/pgrIndiceMasaCorporal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:progressDrawable="@drawable/gradientebar"
            android:layout_marginTop="5dp"
            android:max="33"
            android:min="15"
            android:progress="27"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center" >
            <TextView
                android:id="@+id/lblEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/stringEstado"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/lblSalud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Sobrepeso"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:theme="@style/AppTheme"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="80dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>